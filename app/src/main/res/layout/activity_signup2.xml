<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/back4"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context=".UsersAuth.Activity.SignupActivity">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/opwhiteshape"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <androidx.cardview.widget.CardView
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:elevation="12dp"
                    android:id="@+id/view2"
                    app:cardCornerRadius="60dp"
                    android:layout_centerHorizontal="true"
                    android:innerRadius="0dp"
                    android:shape="ring"
                    android:thicknessRatio="1.9"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="15dp">
                    <ImageView
                        android:layout_height="match_parent"
                        android:layout_width="match_parent"
                        android:id="@+id/imageView1"
                        android:src="@drawable/icon"
                        android:layout_alignParentTop="true"
                        android:layout_centerHorizontal="true"
                        android:scaleType="fitXY">
                    </ImageView>
                </androidx.cardview.widget.CardView>
                <RelativeLayout
                    android:id="@+id/body"
                    android:layout_width="350dp"
                    android:layout_height="500dp"
                    android:background="@drawable/opblackhape"
                    android:layout_marginTop="10dp"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/view2">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:id="@+id/lay">

                            <EditText
                                android:id="@+id/nameField"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/shape"
                                android:drawableRight="@drawable/ic_baseline_person_pin_24"
                                android:drawablePadding="15dp"
                                android:drawableTint="@color/colorPrimary"
                                android:ellipsize="start"
                                android:ems="10"
                                android:gravity="center"
                                android:hint="اسم المستخدم"
                                android:inputType="textPersonName"
                                android:paddingRight="15dp"
                                android:paddingLeft="15dp"
                                android:textAlignment="textStart"
                                android:textColor="#000000"
                                android:textColorHint="#000000"
                                android:textSize="15dp"
                                tools:ignore="RtlCompat" />

                            <EditText
                                android:id="@+id/email"
                                android:hint="الايميل"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/shape"
                                android:drawableRight="@drawable/ic_baseline_email_24"
                                android:drawablePadding="15dp"
                                android:drawableTint="@color/colorPrimary"
                                android:ellipsize="start"
                                android:ems="10"
                                android:paddingLeft="10dp"
                                android:gravity="center"
                                android:inputType="textEmailAddress"
                                android:paddingRight="10dp"
                                android:textAlignment="textStart"
                                android:textColor="#000000"
                                android:textColorHint="#000000"
                                android:textSize="15dp"
                                tools:ignore="RtlCompat"
                                android:layout_below="@id/nameField"/>

                            <EditText
                                android:id="@+id/address"
                                android:hint="العنوان"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="1dp"
                                android:paddingLeft="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/shape"
                                android:drawableRight="@drawable/ic_baseline_email_24"
                                android:drawablePadding="15dp"
                                android:drawableTint="@color/colorPrimary"
                                android:ellipsize="start"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="textEmailAddress"
                                android:paddingRight="15dp"
                                android:textAlignment="textStart"
                                android:textColor="#000000"
                                android:textColorHint="#000000"
                                android:textSize="15dp"
                                tools:ignore="RtlCompat"
                                android:layout_below="@id/email" />


                            <EditText
                                android:id="@+id/phoneField"
                                android:hint="رقم الهاتف"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginLeft="5dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginRight="5dp"
                                android:paddingLeft="10dp"
                                android:layout_marginBottom="10dp"
                                android:background="@drawable/shape"
                                android:drawableRight="@drawable/ic_baseline_add_ic_call_24"
                                android:drawablePadding="15dp"
                                android:drawableTint="@color/colorPrimary"
                                android:ellipsize="start"
                                android:ems="10"
                                android:gravity="center"
                                android:inputType="number"
                                android:paddingRight="10dp"
                                android:textAlignment="textStart"
                                android:textColor="#000000"
                                android:textColorHint="#000000"
                                android:textSize="15dp"
                                tools:ignore="RtlCompat"
                                android:layout_below="@id/address"/>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginBottom="10dp"
                                android:layout_marginTop="1dp"
                                android:id="@+id/type_spinner_lay"
                                android:background="@drawable/shape"
                                android:layout_below="@id/phoneField">
                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textDirection="rtl"
                                    android:id="@+id/type_spinner"/>
                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_width="match_parent"
                                android:layout_height="45dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="10dp"
                                android:id="@+id/job_spinner_lay"
                                android:background="@drawable/shape"
                                android:layout_below="@id/type_spinner_lay"
                                android:visibility="gone">
                                <Spinner
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:textDirection="rtl"
                                    android:id="@+id/job_spinner"/>
                            </RelativeLayout>

                            <EditText
                                android:id="@+id/password"
                                android:focusableInTouchMode="true"
                                android:hint="كلمة السر"
                                android:layout_width="match_parent"
                                android:layout_height="50dp"
                                android:layout_marginTop="1dp"
                                android:layout_marginBottom="1dp"
                                android:background="@drawable/shape"
                                android:drawableRight="@drawable/ic_baseline_lock_24"
                                android:drawableTint="@color/colorPrimary"
                                android:drawablePadding="15dp"
                                android:ellipsize="start"
                                android:ems="10"
                                android:paddingLeft="10dp"
                                android:gravity="center"
                                android:inputType="textVisiblePassword"
                                android:paddingRight="10dp"
                                android:textAlignment="textStart"
                                android:textColor="#000000"
                                android:textColorHint="#000000"
                                android:textSize="15dp"
                                tools:ignore="RtlCompat"
                                android:layout_below="@id/job_spinner_lay"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@id/password"
                                android:id="@+id/txt"
                                android:layout_marginTop="10dp"
                                android:text="اختر صورة لك ..."
                                android:textColor="@color/white"
                                android:textSize="15dp"
                                android:textStyle="bold"/>
                            <ImageView
                                android:layout_width="150dp"
                                android:layout_height="150dp"
                                android:orientation="horizontal"
                                android:layout_gravity="center"
                                android:layout_marginLeft="15dp"
                                android:layout_below="@+id/txt"
                                android:layout_marginRight="15dp"
                                android:layout_marginBottom="10dp"
                                android:id="@+id/profileimage"
                                android:layout_centerHorizontal="true"
                                android:src="@drawable/ic_baseline_image_24" />

                        </RelativeLayout>

                </RelativeLayout>

                <Button
                    android:id="@+id/sign_up_button"
                    android:layout_width="300dp"
                    android:layout_centerHorizontal="true"
                    android:layout_height="50dp"
                    android:layout_marginTop="15dp"
                    android:background="@drawable/shape2"
                    android:text="إنشاء حساب"
                    android:layout_below="@id/body"
                    android:textSize="24dp"
                    android:textColor="#ffff"
                    android:textStyle="bold"/>

                <LinearLayout
                    android:layout_width="300dp"
                    android:layout_marginTop="15dp"
                    android:weightSum="2"
                    android:layout_marginBottom="5dp"
                    android:layout_alignParentBottom="true"
                    android:layout_centerHorizontal="true"
                    android:layout_below="@id/sign_up_button"
                    android:layout_height="wrap_content">

                    <Button
                        android:id="@+id/sign_in_button"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="50dp"
                        android:background="@drawable/shape2"
                        android:text="تسجيل الدخول"
                        android:textAllCaps="false"
                        android:textSize="16dp"
                        android:textColor="#ffffff"
                        android:layout_marginRight="7dp"
                        android:textStyle="bold"
                        android:layout_marginBottom="10dp"/>

                    <Button
                        android:id="@+id/btn_reset_password"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textSize="16dp"
                        android:layout_marginLeft="7dp"
                        android:layout_height="50dp"
                        android:background="@drawable/shape2"
                        android:textStyle="bold"
                        android:text="نسيت كلمة السر؟"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:layout_below="@id/sign_up_button"/>

                </LinearLayout>
            </RelativeLayout>
        </ScrollView>

        <com.iigo.library.PeasLoadingView
            android:id="@+id/plv_loading1"
            app:peas_count="8"
            app:peas_radius="8.5"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"/>

    </RelativeLayout>



</RelativeLayout>