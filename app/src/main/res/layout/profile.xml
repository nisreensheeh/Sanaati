<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customers.Activity.ServisesActivity">
    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:background="@drawable/initimage"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="50dp"
        android:id="@+id/img"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="اسم"
        android:layout_below="@id/img"
        android:id="@+id/name"
        android:textSize="30dp"
        android:layout_marginTop="10dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="اسم"
        android:textSize="18dp"
        android:layout_below="@id/name"
        android:id="@+id/job"
        android:layout_marginTop="10dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:gravity="center"
        android:text="اسم"
        android:textSize="18dp"
        android:layout_below="@id/job"
        android:id="@+id/address"
        android:layout_marginTop="15dp"/>




    <LinearLayout
        android:id="@+id/rel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:layoutDirection="rtl"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/request_btn">
        <ImageView
            android:id="@+id/whatsapp_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:src="@drawable/ic_baseline_chat_bubble_24"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/call_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:src="@drawable/ic_baseline_add_ic_call_24"
            android:layout_margin="10dp"/>
        <ImageView
            android:id="@+id/complain_image"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="80dp"
            android:src="@drawable/ic_baseline_complain_24"
            android:layout_margin="10dp"/>
    </LinearLayout>
    <Button
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="طلب خدمة"
        android:layout_marginTop="10dp"
        android:id="@+id/request_btn"
        android:textStyle="bold"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="10dp"
        android:layout_weight="1"
        android:textColor="#ffffff"
        android:textSize="18dp"
        android:background="@drawable/shape3"
        android:layout_alignParentBottom="true" />

</RelativeLayout>