<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customers.Activity.MainActivity"
    android:background="@color/grey">



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="2"
        android:background="@color/grey"
        android:layoutDirection="rtl"
        android:id="@+id/servicesLay">

        <androidx.cardview.widget.CardView
            android:id="@+id/serviceCard"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="خدمات"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="30dp"/>
        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/LocationsCard"
            android:layout_width="0dp"
            android:layout_height="100dp"
            android:background="@color/white"
            android:layout_weight="1"
            android:padding="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="5dp"
            app:cardElevation="10dp"
            app:cardCornerRadius="15dp">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="مواقع"
                android:layout_gravity="center"
                android:textStyle="bold"
                android:textSize="30dp"/>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="15dp"
        android:layout_below="@+id/servicesLay"
        android:id="@+id/topRatedLay">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Top Rated on Board"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="15dp"
        android:layout_below="@+id/topRatedLay"
        android:id="@+id/secondCard">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="I dont Know hhh :)-"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/search_card"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/white"
        android:layout_weight="1"
        android:padding="5dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="8dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="15dp"
        android:layout_below="@+id/secondCard">
        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="search for a Service"
            android:layout_gravity="left"
            android:textStyle="bold"
            android:textSize="12dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="3dp"/>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="30dp">

            <EditText
                android:id="@+id/search_et"
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:padding="10dp"
                android:background="@drawable/grayshaperad"
                android:hint="ادخل ما تبحث عنه هنا ..."
                android:textSize="12dp"
                android:textColor="@color/black"/>
            <Button
                android:id="@+id/search_btn"
                android:layout_width="80dp"
                android:layout_height="30dp"
                android:layout_below="@id/search_et"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:background="@drawable/shape3"
                android:text="بحث" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>




</RelativeLayout>